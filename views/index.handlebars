<div class="container">
  <div class="whole">
    <h1>Burger Town!</h1>
    <div class="top">
      <div class="container">
        <div class="row">
          <div class="col-6 ordered">
            <h4>Ordered</h4>

            <ul>
              {{#each burgers}}
              {{#unless devoured}}
              {{> burgers/burger-block devour=true}}
              {{/unless}}
              {{/each}}
            </ul>
          </div>
          
          <div class="col-6 delivery">
            <h4>Out for Delivery</h4>

            <ul>
              {{#each burgers}}
              {{#if devoured}}
              {{> burgers/burger-block devour=false}}
              {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="bottom">
      <div class="container">
        <div class="row">
          <div class="col-12">

            <h4>Add Order</h4>
            <form class="create-form">

              <div class="form-group">
                <label for="bu"></label>
                <input type="text" id="bu" name="burger_name">
              </div>

              <div class="form-group">
                <label for="devoured">Order Status</label><br>
                <input type="radio" name="devoured" value="1" checked> Out for Delivery<br>
                <input type="radio" name="devoured" value="0"> Ordered
              </div>

              <button type="submit">Add Burger</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>